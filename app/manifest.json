{
  "name": "__MSG_appName__",
  "short_name": "__MSG_appShortName__",
  "description": "__MSG_appDescription__",
  "version": "2019.9.25.2",
  "manifest_version": 2,
  "default_locale": "en",
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "scripts": [
      "scripts/background.js",
      "scripts/omnibox.background.js",
      "scripts/messaging.js"
    ]
    
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "__MSG_browserActionTitle__",
    "default_popup": "pages/options.html"
  },
  "options_page": "pages/options.html",
  "options_ui": {
    "page": "pages/options.html",
    "chrome_style": true
  },
  "omnibox": {
    "keyword": "alma"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.getalma.com/*",
        "https://*.getalma.com/*"
      ],
      "css": [
        "styles/contentscript.css"
      ],
      "js": [
        "scripts/contentscript.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    },
    {
      "matches": [
        "http://*.getalma.com/reports*",
        "https://*.getalma.com/reports*"
      ],
      "js": [
        "scripts/reports.layout.content.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    },
    {
      "matches": [
        "http://*.getalma.com/workflows/processes/*/*/*",
        "https://*.getalma.com/workflows/processes/*/*/*"
      ],
      "css": [
        "styles/almastart.css"
      ],
      "js": [
        "scripts/almastart.layout.content.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    "pages/searchintercept.html",
    "images/icon-128.png"
  ],
  "externally_connectable": {
    "matches": ["*://*.getalma.com/*"]
  },
  "permissions": [
    "activeTab",
    "background",
    "alarms",
    "contextMenus",
    "cookies",
    "downloads",
    "identity",
    "nativeMessaging",
    "notifications",
    "storage",
    "tabs",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "unlimitedStorage",
    "<all_urls>"
  ]
}
